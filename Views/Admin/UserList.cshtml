
@model IEnumerable<TradeAssociationWebsite.Models.Admin.User>
@{
    ViewData["Title"] = "Quản lý hội viên";
}
<style>
    .btn {
        padding: 20px;
    }
</style>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Danh sách hội viên</h2>
        </div>
        <div class="col-6 text-end">
            <a href="/CreateUser" class="btn btn-primary" >
                <i class="bi bi-plus-circle"></i> &nbsp; Thêm hội viên
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table tabled-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th width="20%">
                    Người dùng
                </th>
                <th>
                    Họ tên
                </th>
                <th>
                    Số điện thoại
                </th>
                <th>
                    Địa chỉ
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var user in Model)
            {
                <tr>
                    <td width="20%">
                        @user.UserName
                    </td>
                    <td width="15%">
                        @user.FullName
                    </td>
                    <td width="15%">
                        @user.Phone
                    </td>
                    <td width="15%">
                        @user.Address
                    </td>
                    <td>
                        <div class="w-50 btn-group d-inline" role="group">
                            <a href="/Admin/UpdateUser/@user.Id"
                               class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Sửa
                            </a>
                        </div>
@*                         <div class="w-50 btn-group d-inline" role="group">
                            <a href="/DetailsUser/@user.Id"
                               class="btn btn-info mx-2">
                                <i class="bi bi-pencil-square"></i>Chi tiết
                            </a>
                        </div> *@
                        <div class="w-50 btn-group d-inline" role="group">
                            <a href="/Admin/DeleteUser/@user.Id"
                               class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>Xóa
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

