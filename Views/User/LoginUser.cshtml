@using TradeAssociationWebsite.Models.Admin;
@model User
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="row justify-content-md-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Login
            </div>
            <div class="card-body">
                <form action="/User/Login" method="post" enctype="multipart/form-data" >
                    <input name="__RequestVerificationToken" type="hidden" value="token_value_here" />
                    <div class="form-group">
                        <label asp-for="UserName">Tài khoản</label>
                        <input asp-for="UserName" id="UserName" name="UserName" class="form-control" placeholder="Nhập tài khoản..." type="text" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Mật khẩu</label>
                        <input asp-for="Password" id="Password" name="Password" class="form-control" placeholder="Nhập mật khẩu" type="password" />
                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-outline-success " value="Login" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
