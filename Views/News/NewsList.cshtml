@model IEnumerable<TradeAssociationWebsite.Models.Admin.News>
@{
    ViewData["Title"] = "Quản lý tin tức sự kiện";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Danh sách sự kiện</h2>
        </div>
        <div class="col-6 text-end">
            <a href="/CreateNews" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Thêm sự kiện
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table tabled-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th width="20%">
                    Tiêu đề
                </th>
                <th>
                    Người đăng
                </th>
                <th>
                    Ngày đăng
                </th>
                <th>
                    Số lượt xem
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var news in Model)
            {
                <tr>
                    <td width="20%">
                        @news.Title
                    </td>
                    <td width="15%">
                        @news.UserName
                    </td>
                    <td width="15%">
                        @news.CreatedAt
                    </td>
                    <td width="15%">                       
                        @news.ViewCount
                    </td>
                    <td>
                        <div class="w-50 btn-group d-inline" role="group">
                            <a href="/News/UpdateNews/@news.Id"
                               class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Sửa
                            </a>
                        </div>
@*                      <div class="w-50 btn-group d-inline" role="group">
                            <a href="/DetailsUser/@user.Id"
                                class="btn btn-info mx-2">
                                <i class="bi bi-pencil-square"></i>Chi tiết
                            </a>
                        </div> *@
                        <div class="w-50 btn-group d-inline" role="group">
                            <a href="/News/DeleteNews/@news.Id"
                               class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>Xóa
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

